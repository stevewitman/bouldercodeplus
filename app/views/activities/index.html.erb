<%= page_header "After-meetup Activities" do %>
  <%= link_to 'Add New Activity', new_activity_path, class: "btn btn-warning float-right" %>
<% end %>

<% @activities.each do |activity| %>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title"><%= activity.title %></h3>
    </div>
    <div class="panel-body">
      <% if activity.description %>
        <%= activity.description %><br><br>
      <% end %>
      <strong>Meeting time:</strong> &nbsp;<%= activity.meet_time %><br>
      <strong>Meeting place:</strong> <%= activity.meet_place %><br>
    </div>
    <div class="panel-footer clearfix">
      <% if current_user %>
        <span class="bcp-member">
          <div class="bcp-avatar" style="background-image: url(<%= current_user.photo_url %>);"></div>
          <!-- <div class="member-name">Steve Witman</div> -->
        </span>
      <% end %>
      <span class="bcp-join">
        <%= link_to 'Join in', memberships_path(:user_id => current_user.id, :activity_id => activity.id), :method => :post, class: "btn btn-success" %>
      </span>
    </div>
  </div>
<% end %>
